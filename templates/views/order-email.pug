doctype html
html(lang="en")
	head
	body
		h1 Hello #{ recipient.name } You have a new order to process. Be quick!
		table(class="table")
			thead
				tr
					th(scope="col") Meal
					th(scope="col") Quantity
			tbody(id="receipt-body")
				each order, key in orders
					if key != 'count'
						tr
							td=key
							td=order

		h4 Sincerely,
		h4 The Food Delivery App Team
